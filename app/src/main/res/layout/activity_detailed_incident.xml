<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBlack"
    tools:context=".DetailedIncidentActivity">

    <Button
        android:id="@+id/deleteIncidentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ACC1"
        android:onClick="deleteIncident"
        android:text="@string/dtld_delete_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.750"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <Button
        android:id="@+id/updateIncidentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ACC1"
        android:onClick="updateIncident"
        android:text="@string/dtld_update_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <EditText
        android:id="@+id/editTextIncidentName"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:ems="10"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/dtldIncidentName"
        android:textColorHint="@color/tanAccent"
        android:inputType="none"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <EditText
        android:id="@+id/editTextIncidentSymptoms"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"
        android:hint="@string/dtld_symptoms"
        android:textColorHint="@color/teal_200"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <EditText
        android:id="@+id/editTextIncidentDiagnosis"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"
        android:hint="@string/dtld_diagnosis"
        android:textColorHint="@color/teal_200"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <EditText
        android:id="@+id/editTextIncidentPrescription"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"
        android:hint="@string/dtld_prescription"
        android:textColorHint="@color/teal_200"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80" />

    <EditText
        android:id="@+id/incidentDobEditText"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/dtld_dob"
        android:textColorHint="@color/tanAccent"
        android:inputType="text"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20" />

    <EditText
        android:id="@+id/incidentDoeEditText"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/dtld_doe"
        android:textColorHint="@color/tanAccent"
        android:inputType="text"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <EditText
        android:id="@+id/incidentGenderEditText"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/dtld_gender"
        android:textColorHint="@color/tanAccent"
        android:inputType="text"
        android:textColor="@color/tanAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

</androidx.constraintlayout.widget.ConstraintLayout>